// colors
$white ?= #fff
$gray ?= #fcfcfc
$black ?= #011638

$primary ?= #ff0076
$info ?= $black
$warning ?= #faad14
$danger ?= #f5222d

$selection-color ?= $white
$selection-bg-color ?= $primary

$textColor ?= $black

$codeBlockBgColor ?= #282c34

$border-color ?= #A4DBE8
$divider-color ?= #A4DBE8

$link-color ?= #A4DBE8
$link-decoration ?= none
$link-hover-color ?= #A4DBE8
$link-hover-decoration ?= none

// font
$font-family-base ?= -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial,
  sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
$font-family-monospace ?= "SFMono-Regular",Consolas,"Liberation Mono",Menlo,Courier,monospace
$font-size-base ?= 14px
$line-height-base ?= 1.5

// grad
$grid-columns = 12
$grid-breakpoints = {
  xs: 0,
  sm: 576px,
  md: 768px,
  lg: 992px,
  xl: 1200px
}

$container-max-widths = {
  sm: 540px,
  md: 720px,
  lg: 960px,
  xl: 1140px
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active{
  border-bottom: 2px solid #A4DBE8;
}

a.sidebar-link.active, a.sidebar-link:hover{
  color: #A4DBE8;
  border-left-color: #A4DBE8;
}

a {
    font-weight: 500;
    color: #A4DBE8;
    text-decoration: none;
}

.home .hero .action-button{
  background-color: #A4DBE8;
  border-bottom: 1px solid #000000;
}

.home .hero .action-button:hover{
  background-color: #E4F4F8;
  border-bottom: 1px solid #000000;
}

h2 {
  color: #000000!important;
}

.nav-link.external {
  color: #000000!important;
}

.nav-link.external:hover {
  color: #000000!important;
}

.navbar .site-name {
  color: #000000!important;
}